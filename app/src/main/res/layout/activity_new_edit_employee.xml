<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Employee"
        android:id="@+id/lblTitle"
        android:textSize="30sp"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:fontFamily="serif" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lblEmpCode"
        android:textSize="18sp"
        android:fontFamily="serif"
        android:textAlignment="center"
        android:layout_below="@+id/tbEmpId"
        android:layout_above="@+id/btnCheck" />


    <Button
        android:text="Cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnCancel"
        android:fontFamily="serif"
        android:textStyle="normal|bold"
        android:textSize="23sp"

        android:background="@color/colorPrimaryDark"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />
    <Button
        android:text="Save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnCheck"
        android:fontFamily="serif"
        android:textStyle="normal|bold"
        android:layout_above="@+id/btnCancel"
        android:textSize="23sp"
        android:background="@color/colorPrimaryDark"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tbLName"
        android:textSize="18sp"
        android:hint="Employee Last Name"
        android:fontFamily="serif"
        android:textAlignment="center"
        android:layout_below="@+id/EmpPic"
        android:layout_alignParentStart="true"
        android:layout_marginTop="23dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tbEmpId"
        android:textSize="18sp"
        android:fontFamily="serif"
        android:hint="ID Number"
        android:textAlignment="center"
        android:layout_below="@+id/tbLName"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tbFName"
        android:hint="Employee First Name"
        android:textSize="18sp"
        android:fontFamily="serif"
        android:textAlignment="center"
        android:layout_marginBottom="34dp"
        android:layout_alignBottom="@+id/tbLName"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"

        android:src="@drawable/images"
        android:id="@+id/EmpPic"
        android:layout_below="@+id/lblTitle"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
