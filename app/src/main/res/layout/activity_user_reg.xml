<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@android:color/darker_gray">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="User Registration"
        android:id="@+id/lblTitle"
        android:textSize="30sp"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:fontFamily="serif" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tbUserName"
        android:textSize="18sp"
        android:layout_below="@+id/lblInstruction"
        android:hint="Username"
        android:fontFamily="serif"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="All fields require data
        "
        android:id="@+id/lblInstruction"
        android:textSize="23sp"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:textStyle="normal|italic"
        android:fontFamily="serif"
        android:layout_below="@+id/lblTitle"
        android:layout_alignParentStart="true" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tbPassword"
        android:textSize="18sp"
        android:layout_below="@+id/tbUserName"
        android:hint="Password"
        android:fontFamily="serif"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tbEmail"
        android:textSize="18sp"
        android:layout_below="@+id/tbPassword"
        android:hint="E-Mail Address"
        android:fontFamily="serif"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tbCompany"
        android:textSize="18sp"
        android:layout_below="@+id/tbEmail"
        android:hint="Company Name"
        android:fontFamily="serif"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tbFName"
        android:textSize="18sp"
        android:layout_below="@+id/tbCompany"
        android:hint="First Name"
        android:fontFamily="serif"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tbLName"
        android:textSize="18sp"
        android:layout_below="@+id/tbFName"
        android:hint="Last Name"
        android:fontFamily="serif"/>

    <Button
        android:text="Cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnCancel"
        android:fontFamily="serif"
        android:textStyle="normal|bold"
        android:textSize="23sp"
        android:background="@color/colorPrimaryDark"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />
    <Button
        android:text="Save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnCheck"
        android:fontFamily="serif"
        android:textStyle="normal|bold"
        android:layout_above="@+id/btnCancel"
        android:textSize="23sp"
        android:background="@color/colorPrimaryDark"
        android:layout_alignParentStart="true" />


</RelativeLayout>
