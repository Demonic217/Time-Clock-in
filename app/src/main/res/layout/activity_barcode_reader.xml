<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.govendergmail.ysherlin.barcodeplay.BarcodeReader"
    android:background="@android:color/darker_gray">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Check Employee"
        android:id="@+id/lblTitle"
        android:textSize="30sp"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:fontFamily="serif" />

    <TextView
        android:text="Employee info will display here"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="127dp"
        android:id="@+id/txtBarcode"
        android:textSize="18sp"
        android:fontFamily="serif"
        android:textAlignment="center"
        android:layout_below="@+id/lblTitle"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtEmpFName"
        android:textSize="18sp"
        android:fontFamily="serif"
        android:text="Employee First Name"
        android:textAlignment="center"
        android:layout_below="@+id/txtBarcode"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtTime"
        android:textSize="18sp"
        android:text="Time"
        android:fontFamily="serif"
        android:textAlignment="center"
        android:layout_below="@+id/txtEmpLName"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Employee Last Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtEmpLName"
        android:textSize="18sp"
        android:fontFamily="serif"
        android:textAlignment="center"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/EmpPic"
        android:layout_below="@+id/lblTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="34dp" />

    <Button
        android:text="Cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnCancel"
        android:fontFamily="serif"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:background="@color/colorPrimaryDark"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />
    <Button
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnCheck"
        android:fontFamily="serif"
        android:textStyle="normal|bold"
        android:layout_above="@+id/btnCancel"
        android:textSize="18sp"
        android:background="@color/colorPrimaryDark"
        android:layout_alignParentStart="true" />

</RelativeLayout>
